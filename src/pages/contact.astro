---
import Layout from '../layouts/Layout.astro';
import spamProtectionScript from '../scripts/spam-protection.js?raw';
import ScrollAnimator from '../components/ScrollAnimator.astro';
---

<Layout 
	title="Contact GadgetFix | computer service Dallas Fort Worth Plano Arlington Irving"
	description="Need computer service? Call (469) 430-8607 for same-day mobile service in Dallas, Fort Worth, Plano, Arlington, Irving, Frisco. We come to you 7 days a week!"
	keywords="computer service dallas, computer service fort worth, computer service plano, computer service arlington, virus removal irving, gadgetfix frisco, mckinney computer service"
>
	<!-- Full-Screen Split Contact Section -->
	<section class="split-contact">
		<div class="contact-background"></div>
		
		<!-- Left Side - Contact Information -->
		<div class="contact-left">
			<div class="contact-overlay"></div>
			<div class="left-content animate-content">
				<h1 class="contact-title">MOBILE COMPUTER SERVICE CONTACT</h1>
				<p class="call-to-action">
					CALL GADGETFIX TODAY AT 
					<a href="tel:+14694308607" class="phone-number pulse-hover">(469) 430-8607</a>
				</p>
				<p class="or-text">OR FILL OUT OUR SERVICE REQUEST FORM.</p>
				<p class="support-text">We're ready to help throughout the Dallas-Fort Worth Metroplex, and everywhere in between.</p>
			</div>
		</div>
		
		<!-- Right Side - Simple Form -->
		<div class="contact-right animate-form">
			<div class="mobile-device">
				<div class="device-top">
					<div class="device-camera"></div>
					<div class="device-speaker"></div>
					<div class="device-camera"></div>
				</div>
				
				<div class="device-screen">
					<form class="mobile-form" action="/api/contact/submit" method="POST" data-secure="true">
						<input type="hidden" name="_csrf" value="" />
						<input type="hidden" name="_subject" value="New Contact Request from GadgetFix">
						<input type="hidden" name="_captcha" value="false">
						<input type="hidden" name="_template" value="table">
						<input type="hidden" name="service_type" value="General Contact">
						
						<div class="form-field">
							<input type="text" name="name" placeholder="FULL NAME" required>
						</div>
						
						<div class="form-field">
							<input type="email" name="email" placeholder="EMAIL ADDRESS" required>
						</div>
						
						<div class="form-field">
							<input type="tel" name="phone" placeholder="PHONE NUMBER" required>
						</div>
						
						<div class="form-field">
							<textarea name="message" placeholder="MESSAGE" rows="6" required></textarea>
						</div>
						
						<!-- Honeypot field - hidden from users, visible to bots -->
						<input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
						
						<!-- Cloudflare Turnstile -->
						<div class="cf-turnstile" 
							data-sitekey="0x4AAAAAABqyCtFg77TeYErI"
							data-theme="light"
							data-size="normal"
							style="margin: 15px 0;">
						</div>
						
						<button type="submit" class="send-button btn-enhanced">SEND MESSAGE</button>
						<div id="formMessage" style="margin-top: 15px; text-align: center; font-weight: 600;"></div>
					</form>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Enhanced Design System */
	@keyframes gradientShift {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	@keyframes slideInLeft {
		from {
			opacity: 0;
			transform: translateX(-50px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes slideInRight {
		from {
			opacity: 0;
			transform: translateX(50px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes pulse {
		0% { transform: scale(1); }
		50% { transform: scale(1.05); }
		100% { transform: scale(1); }
	}

	/* Full-Screen Split Contact Layout */
	.split-contact {
		height: 100vh;
		display: flex;
		position: relative;
		overflow: hidden;
	}

	/* Background Image */
	.contact-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #1e40af 100%);
		background-size: 200% 200%;
		animation: gradientShift 8s ease infinite;
		z-index: 1;
	}

	/* Left Side - Contact Information */
	.contact-left {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	.contact-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	.left-content {
		max-width: 500px;
		color: white;
		text-align: left;
	}

	.animate-content {
		animation: slideInLeft 0.8s ease-out;
	}

	.animate-form {
		animation: slideInRight 0.8s ease-out 0.2s backwards;
	}

	.contact-title {
		font-family: var(--font-heading);
		font-size: 3.5rem;
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 2rem;
		text-transform: uppercase;
		letter-spacing: 3px;
		text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
		animation: titleGlow 3s ease-in-out infinite;
	}

	@keyframes titleGlow {
		0%, 100% { text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3); }
		50% { text-shadow: 2px 2px 20px rgba(255, 255, 255, 0.3); }
	}

	.call-to-action {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.phone-number {
		color: #ffffff;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.8rem;
		transition: all 0.3s ease;
		background: linear-gradient(135deg, #2563eb, #1e3a8a);
		padding: 0.5rem 1rem;
		border-radius: 50px;
		display: inline-block;
		margin: 0 0.5rem;
		box-shadow: 0 5px 20px rgba(37, 99, 235, 0.3);
	}

	.phone-number:hover {
		transform: translateY(-2px) scale(1.05);
		box-shadow: 0 8px 30px rgba(37, 99, 235, 0.5);
		text-decoration: none;
	}

	.pulse-hover {
		animation: pulse 2s ease-in-out infinite;
	}

	.or-text {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.support-text {
		font-size: 1.1rem;
		line-height: 1.6;
		opacity: 0.8;
	}

	/* Right Side - Mobile Device Form */
	.contact-right {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	/* Mobile Device Container */
	.mobile-device {
		width: 100%;
		max-width: 400px;
		background: linear-gradient(145deg, #1f2937, #111827);
		border-radius: 30px;
		padding: 20px;
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
		position: relative;
		transition: transform 0.3s ease;
	}

	.mobile-device:hover {
		transform: translateY(-5px);
		box-shadow: 0 35px 70px rgba(0, 0, 0, 0.5);
	}

	.device-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 20px;
		padding: 0 20px;
	}

	.device-camera {
		width: 12px;
		height: 12px;
		background: #374151;
		border-radius: 50%;
	}

	.device-speaker {
		width: 80px;
		height: 6px;
		background: #374151;
		border-radius: 3px;
	}

	/* Device Screen */
	.device-screen {
		background: white;
		border-radius: 20px;
		padding: 30px 25px;
		min-height: 500px;
	}

	/* Mobile Form */
	.mobile-form {
		display: flex;
		flex-direction: column;
		gap: 20px;
		height: 100%;
	}

	.form-field {
		position: relative;
	}

	.form-field input,
	.form-field textarea {
		width: 100%;
		padding: 15px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 25px;
		font-size: 16px;
		font-weight: 500;
		background: #f9fafb;
		transition: all 0.3s ease;
		resize: none;
		box-sizing: border-box;
	}

	.form-field input:focus,
	.form-field textarea:focus {
		outline: none;
		border-color: #2563EB;
		background: white;
		box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
	}

	.form-field input::placeholder,
	.form-field textarea::placeholder {
		color: #9ca3af;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 14px;
	}

	.form-field textarea {
		border-radius: 20px;
		min-height: 120px;
		font-family: inherit;
	}

	/* Enhanced Button */
	.btn-enhanced {
		background: #000000;
		color: white;
		border: 3px solid #000000;
		padding: 18px 40px;
		border-radius: 50px;
		font-size: 16px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
		margin-top: 10px;
		position: relative;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
	}

	.btn-enhanced::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
		transition: left 0.5s ease;
	}

	.btn-enhanced:hover {
		background: #1a1a1a;
		border-color: #333333;
		transform: translateY(-5px) scale(1.02);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
	}

	.btn-enhanced:hover::before {
		left: 100%;
	}

	.btn-enhanced:active {
		transform: translateY(0);
	}

	.send-button {
		width: 100%;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.split-contact {
			flex-direction: column;
			height: auto;
			min-height: 100vh;
		}

		.contact-left {
			flex: none;
			padding: 4rem 2rem 2rem;
			text-align: center;
		}

		.contact-right {
			flex: none;
			padding: 2rem 2rem 4rem;
		}

		.left-content h1 {
			font-size: 2.8rem;
		}

		.call-to-action {
			font-size: 1.2rem;
		}

		.phone-number {
			font-size: 1.4rem;
		}
	}

	@media (max-width: 768px) {
		.split-contact {
			padding: 0;
		}

		.contact-left {
			padding: 3rem 1.5rem 2rem;
		}

		.contact-right {
			padding: 2rem 1.5rem 3rem;
		}

		.left-content h1 {
			font-size: 2.2rem;
			letter-spacing: 1px;
		}

		.call-to-action {
			font-size: 1.1rem;
		}

		.phone-number {
			font-size: 1.3rem;
		}

		.or-text {
			font-size: 1.1rem;
		}

		.support-text {
			font-size: 1rem;
		}

		.mobile-device {
			max-width: 350px;
			padding: 15px;
		}

		.device-screen {
			padding: 25px 20px;
			min-height: 450px;
		}
	}

	@media (max-width: 480px) {
		.left-content h1 {
			font-size: 1.8rem;
		}

		.call-to-action {
			font-size: 1rem;
		}

		.phone-number {
			font-size: 1.2rem;
		}

		.mobile-device {
			max-width: 320px;
			border-radius: 25px;
			padding: 12px;
		}

		.device-screen {
			padding: 20px 15px;
			min-height: 400px;
			border-radius: 15px;
		}

		.form-field input,
		.form-field textarea {
			padding: 12px 16px;
			font-size: 14px;
		}

		.send-button {
			padding: 15px 35px;
			font-size: 14px;
		}
	}
</style>

<script define:vars={{ spamProtectionScript }}>
	// Add spam protection script
	eval(spamProtectionScript);
</script>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.querySelector('.mobile-form');
		const formMessage = document.getElementById('formMessage');
		let lastSubmitTime = 0;
		const RATE_LIMIT_MS = 30000; // 30 seconds between submissions
		
		// Initialize spam protection
		let spamProtection;
		if (form) {
			spamProtection = new SpamProtection(form);
			console.log('SpamProtection initialized');
		}
		
		if (form) {
			form.addEventListener('submit', async function(e) {
				e.preventDefault(); // Always prevent default to handle submission via AJAX
				
				// Check rate limiting
				const now = Date.now();
				if (now - lastSubmitTime < RATE_LIMIT_MS) {
					const secondsLeft = Math.ceil((RATE_LIMIT_MS - (now - lastSubmitTime)) / 1000);
					console.log(`Rate limited: ${secondsLeft} seconds remaining`);
					formMessage.style.color = '#ef4444';
					formMessage.textContent = `Please wait ${secondsLeft} seconds before submitting again.`;
					return false;
				}
				
				// Check honeypot field
				const honeypot = form.querySelector('input[name="website"]');
				if (honeypot && honeypot.value.trim() !== '') {
					console.log('Spam blocked: honeypot field filled');
					formMessage.style.color = '#ef4444';
					formMessage.textContent = 'Form submission blocked. Please call (469) 430-8607.';
					return false;
				}
				
				// Log SpamProtection metadata
				if (spamProtection) {
					const metadata = spamProtection.getMetadata();
					console.log('SpamProtection metadata:', metadata);
				}
				
				// Get button and change text
				const submitButton = form.querySelector('.send-button');
				const originalText = submitButton.textContent;
				submitButton.textContent = 'SENDING...';
				submitButton.disabled = true;
				
				try {
					// Get Turnstile token if available
					const turnstileResponse = form.querySelector('[name="cf-turnstile-response"]');
					if (turnstileResponse && !turnstileResponse.value) {
						console.log('Turnstile not completed');
						formMessage.style.color = '#ef4444';
						formMessage.textContent = 'Please complete the security check.';
						submitButton.textContent = originalText;
						submitButton.disabled = false;
						return false;
					}
					
					// Submit via AJAX to FormSubmit
					const formData = new FormData(form);
					const response = await fetch('https://formsubmit.co/ajax/wellz.levi@gmail.com', {
						method: 'POST',
						headers: {
							'Accept': 'application/json'
						},
						body: formData
					});
					
					const result = await response.json();
					
					if (response.ok) {
						// Success - show message and reset form
						formMessage.style.color = '#10b981';
						formMessage.textContent = 'Message sent successfully! We\'ll contact you soon.';
						form.reset();
						lastSubmitTime = now; // Update rate limit timer
						
						// Hide message after 5 seconds
						setTimeout(() => {
							formMessage.textContent = '';
						}, 5000);
					} else {
						throw new Error('Failed to send');
					}
				} catch (error) {
					console.error('Form submission error:', error);
					formMessage.style.color = '#ef4444';
					formMessage.textContent = 'Error sending message. Please call (469) 430-8607.';
				} finally {
					submitButton.textContent = originalText;
					submitButton.disabled = false;
				}
			});
		}
	});
</script>

<!-- Scroll Animator -->
<ScrollAnimator />
</Layout>