---
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Contact GadgetFix | Phone Repair Dallas Fort Worth | Call (402) 416-6942"
	description="Contact GadgetFix for mobile phone repair in Dallas Fort Worth. Call (402) 416-6942 for same-day service. We come to you! 7 days a week."
	keywords="contact gadgetfix, phone repair dallas contact, mobile repair fort worth, device repair near me"
>
	<!-- Full-Screen Split Contact Section -->
	<section class="split-contact">
		<div class="contact-background"></div>
		
		<!-- Left Side - Contact Information -->
		<div class="contact-left">
			<div class="contact-overlay"></div>
			<div class="left-content">
				<h1>MOBILE ELECTRONICS REPAIR CONTACT</h1>
				<p class="call-to-action">
					CALL GADGET FIX TODAY AT 
					<a href="tel:+14024166942" class="phone-number">(402) 416-6942</a>
				</p>
				<p class="or-text">OR FILL OUT OUR SERVICE REQUEST FORM.</p>
				<p class="support-text">We're ready to help throughout the Dallas-Fort Worth Metroplex, and everywhere in between.</p>
			</div>
		</div>
		
		<!-- Right Side - Mobile Device Form -->
		<div class="contact-right">
			<div class="mobile-device">
				<div class="device-top">
					<div class="device-camera"></div>
					<div class="device-speaker"></div>
					<div class="device-camera"></div>
				</div>
				
				<div class="device-screen">
					<form class="mobile-form" id="contactForm" action="https://formsubmit.co/wellz.levi@gmail.com" method="POST">
						<!-- FormSubmit Configuration -->
						<input type="hidden" name="_subject" value="New Contact from Gadget Fix Website">
						<input type="hidden" name="_captcha" value="false">
						<input type="hidden" name="_template" value="table">
						
						<div class="form-field">
							<input type="text" id="fullName" name="name" placeholder="FULL NAME" required>
						</div>
						
						<div class="form-field">
							<input type="email" id="emailAddress" name="email" placeholder="EMAIL ADDRESS" required>
						</div>
						
						<div class="form-field">
							<input type="tel" id="phoneNumber" name="phone" placeholder="PHONE NUMBER" required>
						</div>
						
						<div class="form-field">
							<textarea id="message" name="message" placeholder="MESSAGE" rows="6" required></textarea>
						</div>
						
						<button type="submit" class="send-button">SEND</button>
					</form>
					<div id="formMessage" class="form-message"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Schema Markup for ContactPage -->
	<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "ContactPage",
	  "mainEntity": {
	    "@type": "MobilePhoneStore",
	    "name": "GadgetFix",
	    "telephone": "+14024166942",
	    "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington"],
	    "openingHoursSpecification": {
	      "@type": "OpeningHoursSpecification",
	      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
	      "opens": "08:00",
	      "closes": "20:00"
	    },
	    "contactPoint": {
	      "@type": "ContactPoint",
	      "telephone": "+14024166942",
	      "contactType": "customer service",
	      "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington"],
	      "availableLanguage": "English"
	    }
	  }
	}
	</script>
</Layout>

<style>
	/* Full-Screen Split Contact Layout */
	.split-contact {
		height: 100vh;
		display: flex;
		position: relative;
		overflow: hidden;
	}

	/* Background Image */
	.contact-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(17, 24, 39, 0.8) 0%, rgba(0, 102, 204, 0.6) 100%), 
					url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="circuit" patternUnits="userSpaceOnUse" width="50" height="50"><rect fill="%23111827" width="50" height="50"/><circle fill="%230066cc" opacity="0.1" cx="25" cy="25" r="2"/><line stroke="%230066cc" opacity="0.2" x1="0" y1="25" x2="50" y2="25" stroke-width="0.5"/><line stroke="%230066cc" opacity="0.2" x1="25" y1="0" x2="25" y2="50" stroke-width="0.5"/></pattern></defs><rect fill="url(%23circuit)" width="1000" height="1000"/></svg>') center/cover;
		z-index: 1;
	}

	/* Left Side - Contact Information */
	.contact-left {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	.contact-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	.left-content {
		max-width: 500px;
		color: white;
		text-align: left;
	}

	.left-content h1 {
		font-family: var(--font-heading);
		font-size: 3.5rem;
		font-weight: 400;
		line-height: 1.1;
		margin-bottom: 2rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.call-to-action {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.phone-number {
		color: #2563EB;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.6rem;
		transition: color 0.3s ease;
	}

	.phone-number:hover {
		color: #1e3a8a;
		text-decoration: underline;
	}

	.or-text {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.support-text {
		font-size: 1.1rem;
		line-height: 1.6;
		opacity: 0.8;
	}

	/* Right Side - Mobile Device Form */
	.contact-right {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	/* Mobile Device Container */
	.mobile-device {
		width: 100%;
		max-width: 400px;
		background: #1f2937;
		border-radius: 30px;
		padding: 20px;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
		position: relative;
	}

	.device-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 20px;
		padding: 0 20px;
	}

	.device-camera {
		width: 12px;
		height: 12px;
		background: #374151;
		border-radius: 50%;
	}

	.device-speaker {
		width: 80px;
		height: 6px;
		background: #374151;
		border-radius: 3px;
	}

	/* Device Screen */
	.device-screen {
		background: white;
		border-radius: 20px;
		padding: 30px 25px;
		min-height: 500px;
	}

	/* Mobile Form */
	.mobile-form {
		display: flex;
		flex-direction: column;
		gap: 20px;
		height: 100%;
	}

	.form-field {
		position: relative;
	}

	.form-field input,
	.form-field textarea {
		width: 100%;
		padding: 15px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 25px;
		font-size: 16px;
		font-weight: 500;
		background: #f9fafb;
		transition: all 0.3s ease;
		resize: none;
	}

	.form-field input:focus,
	.form-field textarea:focus {
		outline: none;
		border-color: #2563EB;
		background: white;
		box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
	}

	.form-field input::placeholder,
	.form-field textarea::placeholder {
		color: #9ca3af;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 14px;
	}

	.form-field textarea {
		border-radius: 20px;
		min-height: 120px;
		font-family: inherit;
	}

	/* Send Button */
	.send-button {
		background: #000000;
		color: white;
		border: 2px solid #000000;
		padding: 18px 40px;
		border-radius: 100px;
		font-size: 16px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 10px;
	}

	.send-button:hover {
		background: #333333;
		border-color: #333333;
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(17, 24, 39, 0.2);
	}

	.send-button:active {
		transform: translateY(0);
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.split-contact {
			flex-direction: column;
			height: auto;
			min-height: 100vh;
		}

		.contact-left {
			flex: none;
			padding: 4rem 2rem 2rem;
			text-align: center;
		}

		.contact-right {
			flex: none;
			padding: 2rem 2rem 4rem;
		}

		.left-content h1 {
			font-size: 2.8rem;
		}

		.call-to-action {
			font-size: 1.2rem;
		}

		.phone-number {
			font-size: 1.4rem;
		}
	}

	@media (max-width: 768px) {
		.split-contact {
			padding: 0;
		}

		.contact-left {
			padding: 3rem 1.5rem 2rem;
		}

		.contact-right {
			padding: 2rem 1.5rem 3rem;
		}

		.left-content h1 {
			font-size: 2.2rem;
			letter-spacing: 1px;
		}

		.call-to-action {
			font-size: 1.1rem;
		}

		.phone-number {
			font-size: 1.3rem;
		}

		.or-text {
			font-size: 1.1rem;
		}

		.support-text {
			font-size: 1rem;
		}

		.mobile-device {
			max-width: 350px;
			padding: 15px;
		}

		.device-screen {
			padding: 25px 20px;
			min-height: 450px;
		}
	}

	@media (max-width: 480px) {
		.left-content h1 {
			font-size: 1.8rem;
		}

		.call-to-action {
			font-size: 1rem;
		}

		.phone-number {
			font-size: 1.2rem;
		}

		.mobile-device {
			max-width: 320px;
			border-radius: 25px;
			padding: 12px;
		}

		.device-screen {
			padding: 20px 15px;
			min-height: 400px;
			border-radius: 15px;
		}

		.form-field input,
		.form-field textarea {
			padding: 12px 16px;
			font-size: 14px;
		}

		.send-button {
			padding: 15px 35px;
			font-size: 14px;
		}
	}

	/* Form Message Styles */
	.form-message {
		margin-top: 20px;
		padding: 15px;
		border-radius: 10px;
		text-align: center;
		font-weight: 600;
		display: none;
	}

	.form-message.success {
		background: #10b981;
		color: white;
		display: block;
	}

	.form-message.error {
		background: #ef4444;
		color: white;
		display: block;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('contactForm');
		const formMessage = document.getElementById('formMessage');
		
		if (form) {
			form.addEventListener('submit', async function(e) {
				e.preventDefault();
				
				const submitButton = form.querySelector('.send-button');
				const originalText = submitButton.textContent;
				submitButton.textContent = 'SENDING...';
				submitButton.disabled = true;
				
				try {
					const response = await fetch(form.action, {
						method: 'POST',
						body: new FormData(form),
						headers: {
							'Accept': 'application/json'
						}
					});
					
					if (response.ok) {
						formMessage.textContent = 'Message sent successfully!';
						formMessage.className = 'form-message success';
						form.reset();
						
						setTimeout(() => {
							formMessage.style.display = 'none';
						}, 5000);
					} else {
						throw new Error('Form submission failed');
					}
				} catch (error) {
					formMessage.textContent = 'Error sending message. Please try again.';
					formMessage.className = 'form-message error';
					
					setTimeout(() => {
						formMessage.style.display = 'none';
					}, 5000);
				} finally {
					submitButton.textContent = originalText;
					submitButton.disabled = false;
				}
			});
		}
	});
</script>