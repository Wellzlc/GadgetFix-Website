---
import Layout from '../layouts/Layout.astro';
import spamProtectionScript from '../scripts/spam-protection.js?raw';
---

<Layout 
	title="Network Cabling Dallas Fort Worth Plano Arlington | Cat6 Installation"
	description="Professional networking and cabling services in Dallas, Fort Worth, Plano, Arlington, Irving, Frisco. Cat6 installation, WiFi setup, network troubleshooting. Call (402) 416-6942!"
	keywords="network cabling dallas, cat6 installation fort worth, business networking plano, structured cabling arlington, wifi setup irving, network services frisco, mckinney network installation"
>
	<!-- Full-Screen Split Contact Section -->
	<section class="split-contact">
		<div class="contact-background"></div>
		
		<!-- Left Side - Contact Information -->
		<div class="contact-left">
			<div class="contact-overlay"></div>
			<div class="left-content">
				<h1>NETWORKING & CABLING CONTACT</h1>
				<p class="call-to-action">
					CALL GADGETFIX TODAY AT 
					<a href="tel:+14024166942" class="phone-number">(402) 416-6942</a>
				</p>
				<p class="or-text">OR FILL OUT OUR SERVICE REQUEST FORM.</p>
				<p class="support-text">Professional network installation and cabling services for homes and businesses throughout Dallas-Fort Worth. Cat6, WiFi, and complete network solutions!</p>
			</div>
		</div>
		
		<!-- Right Side - Mobile Device Form -->
		<div class="contact-right">
			<div class="mobile-device">
				<div class="device-top">
					<div class="device-camera"></div>
					<div class="device-speaker"></div>
					<div class="device-camera"></div>
				</div>
				
				<div class="device-screen">
					<form class="mobile-form" id="contactForm" action="/api/contact/submit" method="POST" data-secure="true">
						<input type="hidden" name="_csrf" value="" />
						<!-- FormSubmit Configuration -->
						<input type="hidden" name="_subject" value="New Networking Service Request from GadgetFix">
						<input type="hidden" name="_captcha" value="false">
						<input type="hidden" name="_template" value="table">
						<input type="hidden" name="service_type" value="Networking and Cabling">
						
						<div class="form-field">
							<input type="text" id="fullName" name="name" placeholder="FULL NAME" required>
						</div>
						
						<div class="form-field">
							<input type="text" id="businessName" name="business_name" placeholder="BUSINESS/HOME NAME">
						</div>
						
						<div class="form-field">
							<input type="email" id="emailAddress" name="email" placeholder="EMAIL ADDRESS" required>
						</div>
						
						<div class="form-field">
							<input type="tel" id="phoneNumber" name="phone" placeholder="PHONE NUMBER" required>
						</div>
						
						<div class="form-field">
							<select id="serviceType" name="network_service_type" required>
								<option value="">SELECT SERVICE TYPE</option>
								<option value="Home WiFi Setup">Home WiFi Setup</option>
								<option value="Home Network Wiring">Home Network Wiring</option>
								<option value="Cat6 Installation">Cat6 Cable Installation</option>
								<option value="WiFi Setup">Business WiFi Setup</option>
								<option value="Network Troubleshooting">Network Troubleshooting</option>
								<option value="Office Network Design">Office Network Design</option>
								<option value="Structured Cabling">Structured Cabling</option>
								<option value="Server Room Setup">Server Room Setup</option>
								<option value="Multiple Services">Multiple Services</option>
								<option value="Other">Other Network Service</option>
							</select>
						</div>
						
						<div class="form-field">
							<select id="businessSize" name="business_size" required>
								<option value="">SELECT SIZE</option>
								<option value="Residential/Home">Residential/Home</option>
								<option value="1-10 employees">1-10 Employees</option>
								<option value="11-25 employees">11-25 Employees</option>
								<option value="26-50 employees">26-50 Employees</option>
								<option value="51-100 employees">51-100 Employees</option>
								<option value="100+ employees">100+ Employees</option>
							</select>
						</div>
						
						<div class="form-field">
							<textarea id="message" name="message" placeholder="DESCRIBE YOUR NETWORKING NEEDS" rows="3" required></textarea>
						</div>
						
						<!-- Honeypot field - hidden from users, visible to bots -->
						<input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
						
						<!-- Cloudflare Turnstile -->
						<div class="cf-turnstile" 
							data-sitekey="0x4AAAAAABqyCtFg77TeYErI"
							data-theme="light"
							data-size="normal"
							style="margin: 15px 0;">
						</div>
						
						<button type="submit" class="send-button">REQUEST QUOTE</button>
					</form>
					<div id="formMessage" class="form-message"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Schema Markup for Networking Service ContactPage -->
	<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "ContactPage",
	  "mainEntity": {
	    "@type": "LocalBusiness",
	    "name": "GadgetFix LLC - Networking Services",
	    "telephone": "+14024166942",
	    "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington", "Richardson", "McKinney"],
	    "openingHoursSpecification": {
	      "@type": "OpeningHoursSpecification",
	      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
	      "opens": "08:00",
	      "closes": "18:00"
	    },
	    "contactPoint": {
	      "@type": "ContactPoint",
	      "telephone": "+14024166942",
	      "contactType": "customer service",
	      "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington", "Richardson", "McKinney"],
	      "availableLanguage": "English"
	    }
	  }
	}
	</script>
</Layout>

<style>
	/* Full-Screen Split Contact Layout */
	.split-contact {
		height: 100vh;
		display: flex;
		position: relative;
		overflow: hidden;
	}

	/* Background Image */
	.contact-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(30, 58, 138, 0.9) 0%, rgba(37, 99, 235, 0.8) 100%), 
					url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="network" patternUnits="userSpaceOnUse" width="100" height="100"><rect fill="%23111827" width="100" height="100"/><circle fill="%232563eb" opacity="0.1" cx="20" cy="20" r="3"/><circle fill="%232563eb" opacity="0.1" cx="80" cy="80" r="3"/><circle fill="%232563eb" opacity="0.1" cx="80" cy="20" r="3"/><circle fill="%232563eb" opacity="0.1" cx="20" cy="80" r="3"/><line stroke="%232563eb" opacity="0.2" x1="20" y1="20" x2="80" y2="20" stroke-width="0.5"/><line stroke="%232563eb" opacity="0.2" x1="20" y1="80" x2="80" y2="80" stroke-width="0.5"/><line stroke="%232563eb" opacity="0.2" x1="20" y1="20" x2="20" y2="80" stroke-width="0.5"/><line stroke="%232563eb" opacity="0.2" x1="80" y1="20" x2="80" y2="80" stroke-width="0.5"/><line stroke="%232563eb" opacity="0.15" x1="20" y1="20" x2="80" y2="80" stroke-width="0.5"/><line stroke="%232563eb" opacity="0.15" x1="80" y1="20" x2="20" y2="80" stroke-width="0.5"/></pattern></defs><rect fill="url(%23network)" width="1000" height="1000"/></svg>') center/cover;
		z-index: 1;
	}

	/* Left Side - Contact Information */
	.contact-left {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	.contact-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.3);
		z-index: -1;
	}

	.left-content {
		max-width: 500px;
		color: white;
		text-align: left;
	}

	.left-content h1 {
		font-family: var(--font-heading);
		font-size: 3.5rem;
		font-weight: 400;
		line-height: 1.1;
		margin-bottom: 2rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.call-to-action {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.phone-number {
		color: #60a5fa;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.6rem;
		transition: color 0.3s ease;
	}

	.phone-number:hover {
		color: #93bbfc;
		text-decoration: underline;
	}

	.or-text {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 2rem;
		opacity: 0.95;
	}

	.support-text {
		font-size: 1.1rem;
		line-height: 1.6;
		opacity: 0.9;
	}

	/* Right Side - Mobile Device Form */
	.contact-right {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	/* Mobile Device Container */
	.mobile-device {
		width: 100%;
		max-width: 400px;
		background: #1f2937;
		border-radius: 30px;
		padding: 20px;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
		position: relative;
	}

	.device-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 20px;
		padding: 0 20px;
	}

	.device-camera {
		width: 12px;
		height: 12px;
		background: #374151;
		border-radius: 50%;
	}

	.device-speaker {
		width: 80px;
		height: 6px;
		background: #374151;
		border-radius: 3px;
	}

	/* Device Screen */
	.device-screen {
		background: white;
		border-radius: 20px;
		padding: 30px 25px;
		min-height: 500px;
	}

	/* Mobile Form */
	.mobile-form {
		display: flex;
		flex-direction: column;
		gap: 20px;
		height: 100%;
	}

	.form-field {
		position: relative;
	}

	.form-field input,
	.form-field textarea,
	.form-field select {
		width: 100%;
		padding: 15px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 25px;
		font-size: 16px;
		font-weight: 500;
		background: #f9fafb;
		transition: all 0.3s ease;
		resize: none;
		box-sizing: border-box;
	}

	.form-field input:focus,
	.form-field textarea:focus,
	.form-field select:focus {
		outline: none;
		border-color: #2563EB;
		background: white;
		box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
	}

	.form-field input::placeholder,
	.form-field textarea::placeholder {
		color: #9ca3af;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 14px;
	}

	.form-field textarea {
		border-radius: 20px;
		min-height: 100px;
		font-family: inherit;
	}

	/* Send Button */
	.send-button {
		background: #000000;
		color: white;
		border: 2px solid #000000;
		padding: 18px 40px;
		border-radius: 100px;
		font-size: 16px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 10px;
	}

	.send-button:hover {
		background: #333333;
		border-color: #333333;
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(17, 24, 39, 0.2);
	}

	.send-button:active {
		transform: translateY(0);
	}

	.form-message {
		margin-top: 1rem;
		padding: 15px;
		border-radius: 10px;
		text-align: center;
		font-weight: 600;
		display: none;
	}

	.form-message.success {
		background: #d1fae5;
		color: #065f46;
		display: block;
	}

	.form-message.error {
		background: #fee2e2;
		color: #991b1b;
		display: block;
	}

	/* Responsive Design */
	@media (max-width: 968px) {
		.split-contact {
			flex-direction: column;
			height: auto;
			min-height: 100vh;
		}

		.contact-left,
		.contact-right {
			flex: none;
			width: 100%;
			padding: 3rem 1.5rem;
		}

		.left-content h1 {
			font-size: 2.5rem;
		}

		.left-content {
			text-align: center;
			margin-bottom: 2rem;
		}

		.mobile-device {
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		.left-content h1 {
			font-size: 2rem;
		}

		.call-to-action {
			font-size: 1.2rem;
		}

		.phone-number {
			font-size: 1.4rem;
		}

		.device-screen {
			padding: 20px 15px;
		}

		.form-field input,
		.form-field textarea,
		.form-field select {
			padding: 12px;
			font-size: 12px;
		}

		.send-button {
			padding: 15px;
			font-size: 14px;
		}
	}
</style>

<script define:vars={{ spamProtectionScript }}>
	// Add spam protection script
	eval(spamProtectionScript);
</script>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('contactForm');
		const formMessage = document.getElementById('formMessage');
		let lastSubmitTime = 0;
		const RATE_LIMIT_MS = 30000; // 30 seconds between submissions
		
		// Initialize spam protection
		let spamProtection;
		if (form) {
			spamProtection = new SpamProtection(form);
			console.log('SpamProtection initialized');
		}
		
		if (form) {
			form.addEventListener('submit', async function(e) {
				e.preventDefault(); // Always prevent default to handle submission via AJAX
				
				// Check rate limiting
				const now = Date.now();
				if (now - lastSubmitTime < RATE_LIMIT_MS) {
					const secondsLeft = Math.ceil((RATE_LIMIT_MS - (now - lastSubmitTime)) / 1000);
					console.log(`Rate limited: ${secondsLeft} seconds remaining`);
					formMessage.style.color = '#ef4444';
					formMessage.textContent = `Please wait ${secondsLeft} seconds before submitting again.`;
					formMessage.style.display = 'block';
					return false;
				}
				
				// Check honeypot field
				const honeypot = form.querySelector('input[name="website"]');
				if (honeypot && honeypot.value.trim() !== '') {
					console.log('Spam blocked: honeypot field filled');
					formMessage.style.color = '#ef4444';
					formMessage.textContent = 'Form submission blocked. Please call (402) 416-6942.';
					formMessage.style.display = 'block';
					return false;
				}
				
				// Log SpamProtection metadata
				if (spamProtection) {
					const metadata = spamProtection.getMetadata();
					console.log('SpamProtection metadata:', metadata);
				}
				
				// Get button and change text
				const submitButton = form.querySelector('.send-button');
				const originalText = submitButton.textContent;
				submitButton.textContent = 'SENDING...';
				submitButton.disabled = true;
				
				try {
					// Get Turnstile token if available
					const turnstileResponse = form.querySelector('[name="cf-turnstile-response"]');
					if (turnstileResponse && !turnstileResponse.value) {
						console.log('Turnstile not completed');
						formMessage.style.color = '#ef4444';
						formMessage.textContent = 'Please complete the security check.';
						formMessage.style.display = 'block';
						submitButton.textContent = originalText;
						submitButton.disabled = false;
						return false;
					}
					
					// Submit via AJAX to FormSubmit
					const formData = new FormData(form);
					const response = await fetch('https://formsubmit.co/ajax/wellz.levi@gmail.com', {
						method: 'POST',
						headers: {
							'Accept': 'application/json'
						},
						body: formData
					});
					
					const result = await response.json();
					
					if (response.ok) {
						// Success - show message and reset form
						formMessage.className = 'form-message success';
						formMessage.textContent = 'Quote request sent successfully! We\'ll contact you within 1 business day.';
						formMessage.style.display = 'block';
						form.reset();
						lastSubmitTime = now; // Update rate limit timer
						
						// Hide message after 5 seconds
						setTimeout(() => {
							formMessage.style.display = 'none';
						}, 5000);
					} else {
						throw new Error('Failed to send');
					}
				} catch (error) {
					console.error('Form submission error:', error);
					formMessage.className = 'form-message error';
					formMessage.textContent = 'Error sending request. Please call (402) 416-6942.';
					formMessage.style.display = 'block';
				} finally {
					submitButton.textContent = originalText;
					submitButton.disabled = false;
				}
			});
		}
	});
</script>