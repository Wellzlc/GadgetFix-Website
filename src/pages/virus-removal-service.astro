          <div class="stats">
            <div class="stat">
              <span class="number">800+</span>
              <span class="label">Computers Cleaned</span>
            </div>
            <div class="stat">
              <span class="number">30 min</span>
              <span class="label">Average Repair</span>
            </div>
            <div class="stat">
              <span class="number">100%</span>
              <span class="label">Mobile Service</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Device Types Section -->
  <section class="device-types">
    <div class="container">
      <h2 class="section-title">Computer Issues We Fix</h2>
      <div class="devices-grid">
        <div class="device-card">
          <div class="service-icon">
            <svg role="img" aria-label="iPhone repair icon" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
