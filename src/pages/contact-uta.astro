---
import Layout from '../layouts/Layout.astro';
import spamProtectionScript from '../scripts/spam-protection.js?raw';
---

<Layout 
	title="UTA Computer Service Request | Password Reset & Virus Removal Arlington"
	description="UTA students - Request computer service now! Password reset, virus removal, slow computer fixes. We come to your dorm or meet on campus. Call (469) 430-8607!"
	keywords="UTA computer repair, UTA laptop password reset, Arlington student computer service, UTA virus removal, campus WiFi troubleshooting, UTA emergency computer help"
>
	<!-- Full-Screen Split Contact Section -->
	<section class="split-contact">
		<div class="contact-background"></div>
		
		<!-- Left Side - Contact Information -->
		<div class="contact-left">
			<div class="contact-overlay"></div>
			<div class="left-content">
				<h1>UTA STUDENT COMPUTER SERVICE</h1>
				<p class="call-to-action">
					CALL GADGETFIX NOW AT 
					<a href="tel:+14694308607" class="phone-number">(469) 430-8607</a>
				</p>
				<p class="or-text">OR SUBMIT YOUR SERVICE REQUEST.</p>
				<p class="support-text">Locked out of your laptop? Computer crisis before finals? We come to your dorm in Arlington or meet you on campus - no waiting in repair shops!</p>
				<div class="service-features">
					<div class="feature">✓ 20-30 min response to UTA</div>
					<div class="feature">✓ Dorm room service available</div>
					<div class="feature">✓ Parent payment options</div>
				</div>
			</div>
		</div>
		
		<!-- Right Side - Mobile Device Form -->
		<div class="contact-right">
			<div class="mobile-device">
				<div class="device-top">
					<div class="device-camera"></div>
					<div class="device-speaker"></div>
					<div class="device-camera"></div>
				</div>
				
				<div class="device-screen">
					<form class="mobile-form" id="contactForm" action="/api/contact/submit" method="POST" data-secure="true">
						<input type="hidden" name="_csrf" value="" />
						<!-- FormSubmit Configuration -->
						<input type="hidden" name="_subject" value="UTA STUDENT EMERGENCY - Computer Service Request">
						<input type="hidden" name="_captcha" value="false">
						<input type="hidden" name="_template" value="table">
						<input type="hidden" name="service_type" value="UTA Student Computer Service">
						
						<div class="form-field">
							<input type="text" id="fullName" name="name" placeholder="YOUR NAME" required>
						</div>
						
						<div class="form-field">
							<input type="email" id="emailAddress" name="email" placeholder="EMAIL ADDRESS" required>
						</div>
						
						<div class="form-field">
							<input type="tel" id="phoneNumber" name="phone" placeholder="PHONE NUMBER" required>
						</div>
						
						<div class="form-field">
							<div class="os-toggle">
								<input type="radio" id="windows" name="operating_system" value="Windows" required>
								<label for="windows" class="os-label">
									<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
										<path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
									</svg>
									Windows
								</label>
								<input type="radio" id="mac" name="operating_system" value="Mac" required>
								<label for="mac" class="os-label">
									<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
										<path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
									</svg>
									Mac
								</label>
							</div>
						</div>
						
						<div class="form-field">
							<select id="issueType" name="issue_type" required>
								<option value="">SELECT YOUR EMERGENCY</option>
								<option value="Password Locked Out">Locked Out - Can't Login</option>
								<option value="Computer Too Slow">Computer Running Too Slow</option>
								<option value="Virus/Malware">Virus/Malware Issues</option>
								<option value="WiFi Not Working">WiFi/Network Problems</option>
								<option value="Lost Files">Lost/Deleted Files</option>
								<option value="Software Setup">Software Installation</option>
								<option value="Won't Start">Computer Won't Start</option>
								<option value="Blue Screen">Blue Screen Errors</option>
								<option value="Other">Other Emergency</option>
							</select>
						</div>
						
						<div class="form-field">
							<select id="location" name="location" required>
								<option value="">WHERE ARE YOU?</option>
								<option value="UV Apartments">Arlington Hall</option>
								<option value="Canyon Creek">KC Hall</option>
								<option value="Res Hall West">Vandergriff Hall</option>
								<option value="Res Hall North">Lipscomb Hall</option>
								<option value="Res Hall South">Kalpana Chawla Hall</option>
								<option value="Northside">Centennial Court</option>
								<option value="The Commons">The Commons</option>
								<option value="On Campus">On Campus - Other Building</option>
								<option value="Off Campus">Off Campus Housing</option>
							</select>
						</div>
						
						<div class="form-field">
							<textarea id="message" name="message" placeholder="DESCRIBE YOUR ISSUE (e.g., 'Final exam tomorrow, laptop won't start')" rows="4" required></textarea>
						</div>
						
						<!-- Honeypot field - hidden from users, visible to bots -->
						<input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
						
						<!-- Cloudflare Turnstile -->
						<div class="cf-turnstile" 
							data-sitekey="0x4AAAAAABqyCtFg77TeYErI"
							data-theme="light"
							data-size="normal"
							style="margin: 15px 0;">
						</div>
						
						<button type="submit" class="send-button">REQUEST EMERGENCY SERVICE</button>
					</form>
					<div id="formMessage" class="form-message"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Schema Markup for UTA Student Service ContactPage -->
	<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "ContactPage",
	  "mainEntity": {
	    "@type": "LocalBusiness",
	    "name": "GadgetFix LLC - UTA Student Computer Service",
	    "telephone": "+14694308607",
	    "areaServed": ["Arlington", "UTA Campus", "University Village", "Canyon Creek"],
	    "openingHoursSpecification": {
	      "@type": "OpeningHoursSpecification",
	      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
	      "opens": "08:00",
	      "closes": "18:00"
	    },
	    "contactPoint": {
	      "@type": "ContactPoint",
	      "telephone": "+14694308607",
	      "contactType": "customer service",
	      "areaServed": ["Arlington", "UTA Campus"],
	      "availableLanguage": "English"
	    }
	  }
	}
	</script>
</Layout>

<style>
	/* Full-Screen Split Contact Layout */
	.split-contact {
		height: 100vh;
		display: flex;
		position: relative;
		overflow: hidden;
	}

	/* Background Image */
	.contact-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #1e3a8a 0%, #000000 100%);
		z-index: 1;
	}

	/* Left Side - Contact Information */
	.contact-left {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	.contact-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	.left-content {
		max-width: 500px;
		color: white;
		text-align: left;
	}

	.left-content h1 {
		font-family: var(--font-heading);
		font-size: 3.5rem;
		font-weight: 400;
		line-height: 1.1;
		margin-bottom: 2rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.call-to-action {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.phone-number {
		color: #2563EB;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.6rem;
		transition: color 0.3s ease;
	}

	.phone-number:hover {
		color: #60a5fa;
		text-decoration: underline;
	}

	.or-text {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.support-text {
		font-size: 1.1rem;
		line-height: 1.6;
		opacity: 0.9;
		margin-bottom: 2rem;
	}

	.service-features {
		display: flex;
		flex-direction: column;
		gap: 0.8rem;
	}

	.feature {
		font-size: 1rem;
		opacity: 0.95;
		padding-left: 1rem;
	}

	/* Right Side - Mobile Device Form */
	.contact-right {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	/* Mobile Device Container */
	.mobile-device {
		width: 100%;
		max-width: 400px;
		background: #1f2937;
		border-radius: 30px;
		padding: 20px;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
		position: relative;
	}

	.device-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 20px;
		padding: 0 20px;
	}

	.device-camera {
		width: 12px;
		height: 12px;
		background: #374151;
		border-radius: 50%;
	}

	.device-speaker {
		width: 80px;
		height: 6px;
		background: #374151;
		border-radius: 3px;
	}

	/* Device Screen */
	.device-screen {
		background: white;
		border-radius: 20px;
		padding: 30px 25px;
		min-height: 500px;
		max-height: 70vh;
		overflow-y: auto;
	}

	/* Mobile Form */
	.mobile-form {
		display: flex;
		flex-direction: column;
		gap: 15px;
		height: 100%;
	}

	.form-field {
		position: relative;
	}

	.form-field input,
	.form-field textarea,
	.form-field select {
		width: 100%;
		padding: 15px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 25px;
		font-size: 16px;
		font-weight: 500;
		background: #f9fafb;
		transition: all 0.3s ease;
		resize: none;
		box-sizing: border-box;
	}

	.form-field input:focus,
	.form-field textarea:focus,
	.form-field select:focus {
		outline: none;
		border-color: #2563EB;
		background: white;
		box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
	}

	.form-field input::placeholder,
	.form-field textarea::placeholder {
		color: #9ca3af;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 13px;
	}

	.form-field textarea {
		border-radius: 20px;
		min-height: 100px;
		font-family: inherit;
	}

	/* OS Toggle */
	.os-toggle {
		display: flex;
		gap: 10px;
		justify-content: space-between;
	}

	.os-toggle input[type="radio"] {
		display: none;
	}

	.os-label {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		padding: 15px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 25px;
		background: #f9fafb;
		cursor: pointer;
		transition: all 0.3s ease;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 14px;
		color: #6b7280;
	}

	.os-label:hover {
		border-color: #2563EB;
		background: white;
	}

	.os-toggle input[type="radio"]:checked + .os-label {
		background: #2563EB;
		border-color: #2563EB;
		color: white;
		box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
	}

	.os-label svg {
		width: 20px;
		height: 20px;
	}

	/* Send Button */
	.send-button {
		background: #000000;
		color: white;
		border: 2px solid #000000;
		padding: 18px 40px;
		border-radius: 100px;
		font-size: 16px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 10px;
	}

	.send-button:hover {
		background: #333333;
		border-color: #333333;
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(17, 24, 39, 0.2);
	}

	.send-button:active {
		transform: translateY(0);
	}

	.form-message {
		margin-top: 1rem;
		padding: 15px;
		border-radius: 10px;
		text-align: center;
		font-weight: 600;
		display: none;
	}

	.form-message.success {
		background: #d1fae5;
		color: #065f46;
		display: block;
	}

	.form-message.error {
		background: #fee2e2;
		color: #991b1b;
		display: block;
	}

	/* Responsive Design */
	@media (max-width: 968px) {
		.split-contact {
			flex-direction: column;
			height: auto;
			min-height: 100vh;
		}

		.contact-left,
		.contact-right {
			flex: none;
			width: 100%;
			padding: 3rem 1.5rem;
		}

		.left-content h1 {
			font-size: 2.5rem;
		}

		.left-content {
			text-align: center;
			margin-bottom: 2rem;
		}

		.service-features {
			align-items: center;
		}

		.mobile-device {
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		.left-content h1 {
			font-size: 2rem;
		}

		.call-to-action {
			font-size: 1.2rem;
		}

		.phone-number {
			font-size: 1.4rem;
		}

		.device-screen {
			padding: 20px 15px;
		}

		.form-field input,
		.form-field textarea,
		.form-field select {
			padding: 12px;
			font-size: 14px;
		}

		.send-button {
			padding: 15px;
			font-size: 14px;
		}
	}
</style>

<script define:vars={{ spamProtectionScript }}>
	// Add spam protection script
	eval(spamProtectionScript);
</script>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('contactForm');
		const formMessage = document.getElementById('formMessage');
		let lastSubmitTime = 0;
		const RATE_LIMIT_MS = 30000; // 30 seconds between submissions
		
		// Initialize spam protection
		let spamProtection;
		if (form) {
			spamProtection = new SpamProtection(form);
			console.log('SpamProtection initialized');
		}
		
		if (form) {
			form.addEventListener('submit', async function(e) {
				e.preventDefault(); // Always prevent default to handle submission via AJAX
				
				// Check rate limiting
				const now = Date.now();
				if (now - lastSubmitTime < RATE_LIMIT_MS) {
					const secondsLeft = Math.ceil((RATE_LIMIT_MS - (now - lastSubmitTime)) / 1000);
					console.log(`Rate limited: ${secondsLeft} seconds remaining`);
					formMessage.className = 'form-message error';
					formMessage.textContent = `Please wait ${secondsLeft} seconds before submitting again.`;
					formMessage.style.display = 'block';
					return false;
				}
				
				// Check honeypot field
				const honeypot = form.querySelector('input[name="website"]');
				if (honeypot && honeypot.value.trim() !== '') {
					console.log('Spam blocked: honeypot field filled');
					formMessage.className = 'form-message error';
					formMessage.textContent = 'Form submission blocked. Please call (469) 430-8607.';
					formMessage.style.display = 'block';
					return false;
				}
				
				// Log SpamProtection metadata
				if (spamProtection) {
					const metadata = spamProtection.getMetadata();
					console.log('SpamProtection metadata:', metadata);
				}
				
				// Get button and change text
				const submitButton = form.querySelector('.send-button');
				const originalText = submitButton.textContent;
				submitButton.textContent = 'SENDING...';
				submitButton.disabled = true;
				
				try {
					// Get Turnstile token if available
					const turnstileResponse = form.querySelector('[name="cf-turnstile-response"]');
					if (turnstileResponse && !turnstileResponse.value) {
						console.log('Turnstile not completed');
						formMessage.className = 'form-message error';
						formMessage.textContent = 'Please complete the security check.';
						formMessage.style.display = 'block';
						submitButton.textContent = originalText;
						submitButton.disabled = false;
						return false;
					}
					
					// Submit via AJAX to FormSubmit
					const formData = new FormData(form);
					const response = await fetch('https://formsubmit.co/ajax/wellz.levi@gmail.com', {
						method: 'POST',
						headers: {
							'Accept': 'application/json'
						},
						body: formData
					});
					
					const result = await response.json();
					
					if (response.ok) {
						// Success - show message and reset form
						formMessage.className = 'form-message success';
						formMessage.textContent = 'Emergency request sent! We\'ll call you within 10 minutes.';
						formMessage.style.display = 'block';
						form.reset();
						lastSubmitTime = now; // Update rate limit timer
						
						// Hide message after 5 seconds
						setTimeout(() => {
							formMessage.style.display = 'none';
						}, 5000);
					} else {
						throw new Error('Failed to send');
					}
				} catch (error) {
					console.error('Form submission error:', error);
					formMessage.className = 'form-message error';
					formMessage.textContent = 'Error sending request. Please call (469) 430-8607.';
					formMessage.style.display = 'block';
				} finally {
					submitButton.textContent = originalText;
					submitButton.disabled = false;
				}
			});
		}
	});
</script>