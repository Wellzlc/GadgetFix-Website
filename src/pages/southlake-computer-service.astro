</Layout>

<style>
.premium-page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

/* Premium Hero */
.premium-hero {
  background: #1e3a8a;
  color: white;
  padding: 5rem 0;
  text-align: center;
}

.premium-hero h1 {
  font-size: 3rem;
  font-weight: 300;
  margin-bottom: 1rem;
  letter-spacing: -1px;
}

.hero-subtitle {
  font-size: 1.3rem;
  margin: 1.5rem 0 2.5rem;
  opacity: 0.95;
  font-weight: 300;
}

.hero-buttons {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 2rem;
}

.btn-premium {
  background: #000000;
  color: white;
  border: 2px solid #000000;
  border-radius: 100px;
  padding: 1.2rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  text-decoration: none;
}

.btn-premium:hover {
  background: #333333;
  border-color: #333333;
  transform: translateY(-2px);
}

.btn-premium.large {
  padding: 1.5rem 3rem;
  font-size: 1.3rem;
}

.btn-secondary {
  background: transparent;
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 100px;
  padding: 1.2rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  text-decoration: none;
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
}

/* Premium Services */
.premium-services {
  padding: 5rem 0;
  background: #fafafa;
}

.section-intro {
  text-align: center;
  font-size: 1.2rem;
  max-width: 800px;
  margin: 0 auto 3rem;
  color: #4a5568;
  line-height: 1.7;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2.5rem;
  margin-top: 3rem;
}

.service-card.premium {
  background: white;
  padding: 2.5rem;
  border-radius: 1rem;
  border: 1px solid #e2e8f0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  text-align: left;
}

.service-card.premium:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  border-color: #2563EB;
}

.service-icon {
  color: #2563EB;
  margin-bottom: 1.5rem;
}

.service-card h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 1rem;
}

.service-card p {
  color: #4a5568;
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.service-features {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.service-features span {
  color: #2d3748;
  font-size: 0.9rem;
  font-weight: 500;
}

/* Location Focus */
.location-focus {
  padding: 5rem 0;
  background: white;
}

.location-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.location-feature {
  text-align: center;
  padding: 2rem;
}

.location-feature h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 1rem;
}

.location-feature p {
  color: #4a5568;
  line-height: 1.7;
}

/* Lifestyle Section */
.lifestyle-section {
  padding: 5rem 0;
  background: #f7fafc;
}

.lifestyle-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.lifestyle-item {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  border-left: 4px solid #2563EB;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.lifestyle-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
}

.lifestyle-item h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 1rem;
}

.lifestyle-item p {
  color: #4a5568;
  line-height: 1.6;
  margin: 0;
}

/* Testimonials */
.testimonials {
  padding: 5rem 0;
  background: white;
}

.testimonial-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.testimonial {
  background: #f7fafc;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  border-left: 4px solid #2563EB;
}

.testimonial p {
  font-style: italic;
  color: #2d3748;
  line-height: 1.6;
  margin-bottom: 1rem;
}

.client {
  font-weight: 600;
  color: #1a202c;
  font-size: 0.9rem;
}

/* Premium CTA */
.premium-cta {
  background: #1e3a8a;
  color: white;
  text-align: center;
  padding: 4rem 0;
}

.premium-cta h2 {
  color: white;
  margin-bottom: 1rem;
}

.premium-cta p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.cta-buttons {
  margin: 2rem 0;
}

.hours {
  opacity: 0.8;
  margin-top: 1.5rem;
}

/* Shared Styles */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

h2 {
  color: #1a202c;
  text-align: center;
  margin-bottom: 2rem;
  font-size: 2.2rem;
  font-weight: 300;
  letter-spacing: -0.5px;
}

.service-note {
  opacity: 0.9;
  margin-top: 1rem;
  font-size: 1rem;
}

/* Responsive */
@media (max-width: 768px) {
  .premium-hero h1 {
    font-size: 2.2rem;
  }
  
  .hero-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .btn-premium, .btn-secondary {
    width: 100%;
    max-width: 300px;
  }
  
  .services-grid {
    grid-template-columns: 1fr;
  }
  
  .service-card.premium {
    padding: 2rem;
  }
}
</style>
</Layout>