<style>
  /* Hero Section */
  .emergency-hero {
    background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 100%);
    color: white;
    padding: 4rem 0 6rem;
    text-align: center;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: 4rem;
    font-weight: 400;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.9;
    line-height: 1.6;
  }

  .emergency-cta-box {
    background: white;
    color: #333;
    padding: 2rem;
    border-radius: 15px;
    max-width: 500px;
    margin: 0 auto 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border: 3px solid #0066cc;
  }

  .availability-status {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-weight: bold;
    color: #22c55e;
    margin-bottom: 1rem;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 1.5s infinite;
    box-shadow: 0 0 10px #22c55e;
  }

  .btn {
    display: inline-block;
    background: #000000;
    color: white;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    border: 2px solid #000000;
  }

  .btn:hover {
    background: #333333;
    border-color: #333333;
    transform: translateY(-2px);
  }

  .btn-large {
    padding: 1.25rem 2rem;
    font-size: 1.2rem;
  }

  .response-time {
    margin-top: 0.5rem;
    color: #666;
    font-size: 0.9rem;
  }

  .trust-indicators {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .trust-indicators span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Service Speed Section */
  .service-speed {
    padding: 6rem 0;
    background: white;
  }

  .speed-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .speed-item {
    text-align: center;
    padding: 2rem;
    background: #f9fafb;
    border-radius: 1rem;
    border-left: 4px solid #1e3a8a;
    transition: transform 0.3s ease;
  }

  .speed-item:hover {
    transform: translateY(-5px);
  }

  .speed-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    color: #1e3a8a;
  }

  .speed-item .time {
    display: block;
    font-size: 3rem;
    font-weight: 400;
    color: #1e3a8a;
    font-family: var(--font-heading);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }

  /* Emergency Services */
  .emergency-services {
    padding: 6rem 0;
    background: #f9fafb;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-top: 2rem;
  }

  .service-card {
    background: white;
    padding: 30px;
    border-radius: 20px;
    border: 2px solid #1e3a8a;
    box-shadow: 0 4px 20px rgba(37, 99, 235, 0.1);
    text-align: center;
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(37, 99, 235, 0.25);
  }

  .service-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    color: #1e3a8a;
  }

  .service-card h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 15px;
    color: var(--color-dark);
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.2;
  }

  .service-card p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .service-card .value-prop {
    display: inline-block;
    font-weight: bold;
    color: #1e3a8a;
    background: rgba(37, 99, 235, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 1.1rem;
  }

  /* Coverage Areas */
  .coverage-areas {
    padding: 6rem 0;
    background: white;
  }

  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .area-group {
    background: #f9fafb;
    padding: 2rem;
    border-radius: 1rem;
    border-left: 4px solid #1e3a8a;
  }

  .area-group h3 {
    font-family: var(--font-heading);
    color: #1e3a8a;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
  }

  .area-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .area-group li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e5e7eb;
    color: #374151;
    font-size: 1rem;
  }

  .area-group li:last-child {
    border-bottom: none;
  }

  /* Final CTA */
  .final-cta {
    padding: 80px 0;
    background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 100%);
    text-align: center;
  }

  .final-cta .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-icon {
    margin-bottom: 2rem;
  }

  .cta-icon svg {
    color: white;
    margin: 0 auto;
  }

  .final-cta h2 {
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 400;
    color: white;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.2;
  }

  .final-cta p {
    font-size: 20px;
    color: white;
    margin-bottom: 3rem;
    line-height: 1.5;
    opacity: 0.9;
  }

  .final-cta .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .hours {
    font-weight: bold;
    color: #22c55e;
    font-size: 1.1rem;
  }

  /* Section Styles */
  .section-title {
    font-family: var(--font-heading);
    font-size: 3rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--color-dark);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    line-height: 1.2;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.8rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }

    .trust-indicators {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .trust-indicators span {
      padding: 0.4rem 0.8rem;
    }

    .section-title {
      font-size: 2.2rem;
    }

    .speed-grid, .services-grid, .areas-grid {
      grid-template-columns: 1fr;
    }

    .final-cta h2 {
      font-size: 36px;
    }

    .final-cta p {
      font-size: 18px;
    }

    .final-cta .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .emergency-cta-box {
      padding: 1.5rem;
    }

    .final-cta {
      padding: 40px 0;
    }

    .final-cta h2 {
      font-size: 28px;
    }

    .final-cta p {
      font-size: 16px;
    }

    .btn {
      padding: 14px 24px;
      font-size: 14px;
    }
  }

  /* Enhanced Design System Classes */
  .hero-gradient {
    background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #1e40af 100%);
    background-size: 200% 200%;
    animation: gradientShift 8s ease infinite;
    color: white;
    position: relative;
    overflow: hidden;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .wave-bottom::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
