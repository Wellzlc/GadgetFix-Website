---
import Layout from '../layouts/Layout.astro';
import BotProtection from '../components/BotProtection.astro';
import spamProtectionScript from '../scripts/spam-protection.js?raw';
---

<Layout 
	title="Contact GadgetFix | Computer Repair Dallas Fort Worth | Call (402) 416-6942"
	description="Contact GadgetFix for computer troubleshooting in Dallas Fort Worth. Windows & Mac repair. Call (402) 416-6942 for same-day service. We come to you!"
	keywords="computer repair dallas contact, windows troubleshooting fort worth, mac repair contact, software repair near me"
>
	<BotProtection />
	<!-- Full-Screen Split Contact Section -->
	<section class="split-contact">
		<div class="contact-background"></div>
		
		<!-- Left Side - Contact Information -->
		<div class="contact-left">
			<div class="contact-overlay"></div>
			<div class="left-content">
				<h1>COMPUTER TROUBLESHOOTING CONTACT</h1>
				<p class="call-to-action">
					CALL GADGETFIX TODAY AT 
					<a href="tel:+14024166942" class="phone-number">(402) 416-6942</a>
				</p>
				<p class="or-text">OR FILL OUT OUR SERVICE REQUEST FORM.</p>
				<p class="support-text">Professional Windows & Mac troubleshooting throughout the Dallas-Fort Worth Metroplex. Password resets, virus removal, and performance optimization - we come to you!</p>
			</div>
		</div>
		
		<!-- Right Side - Mobile Device Form -->
		<div class="contact-right">
			<div class="mobile-device">
				<div class="device-top">
					<div class="device-camera"></div>
					<div class="device-speaker"></div>
					<div class="device-camera"></div>
				</div>
				
				<div class="device-screen">
					<form class="mobile-form" id="contactForm" action="https://formsubmit.co/wellz.levi@gmail.com" method="POST">
						<!-- FormSubmit Configuration -->
						<input type="hidden" name="_subject" value="New Computer Service Request from GadgetFix">
						<input type="hidden" name="_captcha" value="false">
						<input type="hidden" name="_template" value="table">
						<input type="hidden" name="service_type" value="Computer Troubleshooting">
						
						<div class="form-field">
							<input type="text" id="fullName" name="name" placeholder="FULL NAME" required>
						</div>
						
						<div class="form-field">
							<input type="email" id="emailAddress" name="email" placeholder="EMAIL ADDRESS" required>
						</div>
						
						<div class="form-field">
							<input type="tel" id="phoneNumber" name="phone" placeholder="PHONE NUMBER" required>
						</div>
						
						<div class="form-field">
							<select id="computerType" name="computer_type" required>
								<option value="">SELECT COMPUTER TYPE</option>
								<option value="Windows Desktop">Windows Desktop</option>
								<option value="Windows Laptop">Windows Laptop</option>
								<option value="MacBook Pro">MacBook Pro</option>
								<option value="MacBook Air">MacBook Air</option>
								<option value="iMac">iMac</option>
								<option value="Mac mini">Mac mini</option>
								<option value="Other">Other</option>
							</select>
						</div>
						
						<div class="form-field">
							<select id="issueType" name="issue_type" required>
								<option value="">SELECT ISSUE TYPE</option>
								<option value="Password Reset">Password Reset</option>
								<option value="Virus/Malware">Virus/Malware</option>
								<option value="Slow Performance">Slow Performance</option>
								<option value="Won't Start">Won't Start</option>
								<option value="Blue Screen">Blue Screen</option>
								<option value="Data Recovery">Data Recovery</option>
								<option value="Other">Other Issue</option>
							</select>
						</div>
						
						<div class="form-field">
							<textarea id="message" name="message" placeholder="DESCRIBE YOUR COMPUTER ISSUE" rows="4" required></textarea>
						</div>
						
						<!-- Cloudflare Turnstile Widget -->
						<div class="cf-turnstile" 
							data-sitekey="0x4AAAAAABqyCtFg77TeYErI"
							data-theme="light"
							data-size="normal"
							style="margin: 15px 0;">
						</div>
						
						<button type="submit" class="send-button">SEND REQUEST</button>
					</form>
					<div id="formMessage" class="form-message"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Schema Markup for Computer Service ContactPage -->
	<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "ContactPage",
	  "mainEntity": {
	    "@type": "LocalBusiness",
	    "name": "GadgetFix LLC - Computer Troubleshooting",
	    "telephone": "+14024166942",
	    "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington", "Richardson", "McKinney"],
	    "openingHoursSpecification": {
	      "@type": "OpeningHoursSpecification",
	      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
	      "opens": "08:00",
	      "closes": "18:00"
	    },
	    "contactPoint": {
	      "@type": "ContactPoint",
	      "telephone": "+14024166942",
	      "contactType": "customer service",
	      "areaServed": ["Dallas", "Fort Worth", "Plano", "Frisco", "Irving", "Arlington", "Richardson", "McKinney"],
	      "availableLanguage": "English"
	    }
	  }
	}
	</script>
</Layout>

<style>
	/* Full-Screen Split Contact Layout */
	.split-contact {
		height: 100vh;
		display: flex;
		position: relative;
		overflow: hidden;
	}

	/* Background Image */
	.contact-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(17, 24, 39, 0.8) 0%, rgba(0, 102, 204, 0.6) 100%), 
					url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="circuit" patternUnits="userSpaceOnUse" width="50" height="50"><rect fill="%23111827" width="50" height="50"/><circle fill="%230066cc" opacity="0.1" cx="25" cy="25" r="2"/><line stroke="%230066cc" opacity="0.2" x1="0" y1="25" x2="50" y2="25" stroke-width="0.5"/><line stroke="%230066cc" opacity="0.2" x1="25" y1="0" x2="25" y2="50" stroke-width="0.5"/></pattern></defs><rect fill="url(%23circuit)" width="1000" height="1000"/></svg>') center/cover;
		z-index: 1;
	}

	/* Left Side - Contact Information */
	.contact-left {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	.contact-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	.left-content {
		max-width: 500px;
		color: white;
		text-align: left;
	}

	.left-content h1 {
		font-family: var(--font-heading);
		font-size: 3.5rem;
		font-weight: 400;
		line-height: 1.1;
		margin-bottom: 2rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.call-to-action {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.phone-number {
		color: #2563EB;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.6rem;
		transition: color 0.3s ease;
	}

	.phone-number:hover {
		color: #1e3a8a;
		text-decoration: underline;
	}

	.or-text {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.support-text {
		font-size: 1.1rem;
		line-height: 1.6;
		opacity: 0.8;
	}

	/* Right Side - Mobile Device Form */
	.contact-right {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
		padding: 2rem;
	}

	/* Mobile Device Container */
	.mobile-device {
		width: 100%;
		max-width: 400px;
		background: #1f2937;
		border-radius: 40px;
		padding: 15px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
		position: relative;
	}

	/* Device Top (Camera/Speaker) */
	.device-top {
		display: flex;
		justify-content: center;
		gap: 10px;
		padding: 10px 0;
		align-items: center;
	}

	.device-camera {
		width: 15px;
		height: 15px;
		background: #374151;
		border-radius: 50%;
	}

	.device-speaker {
		width: 80px;
		height: 6px;
		background: #374151;
		border-radius: 3px;
	}

	/* Device Screen */
	.device-screen {
		background: white;
		border-radius: 25px;
		padding: 30px 25px;
		min-height: 500px;
		display: flex;
		flex-direction: column;
	}

	/* Form Styling */
	.mobile-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		flex: 1;
	}

	.form-field input,
	.form-field textarea,
	.form-field select {
		width: 100%;
		padding: 15px;
		background: #f3f4f6;
		border: 2px solid transparent;
		border-radius: 10px;
		font-size: 14px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		transition: all 0.3s ease;
		font-family: var(--font-body);
	}

	.form-field input:focus,
	.form-field textarea:focus,
	.form-field select:focus {
		outline: none;
		border-color: #2563EB;
		background: white;
	}

	.form-field textarea {
		resize: vertical;
		min-height: 80px;
	}

	.send-button {
		background: #000000;
		color: white;
		padding: 18px;
		border: none;
		border-radius: 100px;
		font-size: 16px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: auto;
	}

	.send-button:hover {
		background: #333333;
		transform: translateY(-2px);
	}

	.form-message {
		margin-top: 1rem;
		padding: 15px;
		border-radius: 10px;
		text-align: center;
		font-weight: 600;
		display: none;
	}

	.form-message.success {
		background: #d1fae5;
		color: #065f46;
		display: block;
	}

	.form-message.error {
		background: #fee2e2;
		color: #991b1b;
		display: block;
	}

	/* Responsive Design */
	@media (max-width: 968px) {
		.split-contact {
			flex-direction: column;
			height: auto;
			min-height: 100vh;
		}

		.contact-left,
		.contact-right {
			flex: none;
			width: 100%;
			padding: 3rem 1.5rem;
		}

		.left-content h1 {
			font-size: 2.5rem;
		}

		.left-content {
			text-align: center;
			margin-bottom: 2rem;
		}

		.mobile-device {
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		.left-content h1 {
			font-size: 2rem;
		}

		.call-to-action {
			font-size: 1.2rem;
		}

		.phone-number {
			font-size: 1.4rem;
		}

		.device-screen {
			padding: 20px 15px;
		}

		.form-field input,
		.form-field textarea,
		.form-field select {
			padding: 12px;
			font-size: 12px;
		}

		.send-button {
			padding: 15px;
			font-size: 14px;
		}
	}
</style>

<script define:vars={{ spamProtectionScript }}>
	// Add spam protection script
	eval(spamProtectionScript);
</script>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('contactForm') as HTMLFormElement;
		const formMessage = document.getElementById('formMessage');
		
		// Initialize spam protection tracking
		let spamProtection;
		if (form) {
			spamProtection = new SpamProtection(form);
			
			form.addEventListener('submit', async function(e) {
				e.preventDefault();
				
				const submitButton = form.querySelector('.send-button') as HTMLButtonElement;
				const originalText = submitButton.textContent;
				submitButton.textContent = 'SENDING...';
				submitButton.disabled = true;
				
				// Collect form data with spam protection metadata
				const formData = new FormData(form);
				const data = {
					name: formData.get('name'),
					email: formData.get('email'),
					phone: formData.get('phone'),
					message: formData.get('message'),
					computer_type: formData.get('computer_type'),
					issue_type: formData.get('issue_type'),
					website: formData.get('website'), // honeypot
					formType: 'computer-support',
					...spamProtection.getMetadata()
				};
				
				try {
					// First validate with spam protection
					// Try Netlify function first, fallback to API route for local dev
					let response;
					try {
						response = await Promise.race([
							fetch('/.netlify/functions/antispam-validate', {
								method: 'POST',
								body: JSON.stringify(data),
								headers: {
									'Content-Type': 'application/json',
									'Accept': 'application/json'
								}
							}),
							new Promise((_, reject) => 
								setTimeout(() => reject(new Error('Netlify function timeout')), 10000)
							)
						]);
					} catch (error) {
						console.log('Netlify function failed, trying API route:', error.message);
						// Fallback to API route
						response = await Promise.race([
							fetch('/api/antispam/validate', {
								method: 'POST',
								body: JSON.stringify(data),
								headers: {
									'Content-Type': 'application/json',
									'Accept': 'application/json'
								}
							}),
							new Promise((_, reject) => 
								setTimeout(() => reject(new Error('API route timeout')), 10000)
							)
						]);
					}
					
					const result = await response.json();
					
					if (response.ok && result.action === 'allow') {
						// Validation passed, now send to FormSubmit directly from client
						const emailData = new FormData();
						emailData.append('name', formData.get('name'));
						emailData.append('email', formData.get('email'));
						emailData.append('phone', formData.get('phone'));
						emailData.append('message', formData.get('message'));
						emailData.append('computer_type', formData.get('computer_type'));
						emailData.append('issue_type', formData.get('issue_type'));
						emailData.append('_subject', 'New Computer Service Request from GadgetFix');
						emailData.append('_captcha', 'false');
						emailData.append('_template', 'table');
						
						const emailResponse = await fetch('https://formsubmit.co/ajax/wellz.levi@gmail.com', {
							method: 'POST',
							headers: {
								'Accept': 'application/json'
							},
							body: emailData
						});
						
						const emailResult = await emailResponse.json();
						
						if (emailResponse.ok && emailResult.success === 'true') {
							formMessage.textContent = 'Service request sent successfully! We will contact you soon.';
							formMessage.className = 'form-message success';
							formMessage.style.display = 'block';
							
							// Reset the form
							form.reset();
							
							// Reset Cloudflare Turnstile if available
							if (typeof turnstile !== 'undefined') {
								const turnstileWidget = form.querySelector('.cf-turnstile');
								if (turnstileWidget) {
									turnstile.reset();
								}
							}
							
							setTimeout(() => {
								formMessage.style.display = 'none';
							}, 5000);
						} else {
							console.error('FormSubmit error:', emailResult);
							throw new Error('Email sending failed');
						}
					} else if (result.action === 'quarantine') {
						formMessage.textContent = result.message || 'Your submission has been received and is pending review.';
						formMessage.className = 'form-message success';
						formMessage.style.display = 'block';
						
						// Reset the form
						form.reset();
						
						// Reset Cloudflare Turnstile if available
						if (typeof turnstile !== 'undefined') {
							const turnstileWidget = form.querySelector('.cf-turnstile');
							if (turnstileWidget) {
								turnstile.reset();
							}
						}
						
						setTimeout(() => {
							formMessage.style.display = 'none';
						}, 7000);
					} else if (result.action === 'block') {
						formMessage.textContent = result.message || 'Your submission has been blocked. Please contact us directly at (402) 416-6942.';
						formMessage.className = 'form-message error';
						formMessage.style.display = 'block';
					} else {
						throw new Error('Validation failed');
					}
				} catch (error) {
					console.error('Form submission error:', error);
					console.error('Error details:', error.message, error.stack);
					
					// Check if it's a network timeout error
					if (error.message && error.message.includes('fetch')) {
						// Likely a network/timeout issue, but email might have been sent
						formMessage.textContent = 'Your service request may have been sent. If you don\'t hear back within 24 hours, please call (402) 416-6942.';
						formMessage.className = 'form-message success';
					} else {
						formMessage.textContent = 'Error sending request. Please try again or call us at (402) 416-6942.';
						formMessage.className = 'form-message error';
					}
					formMessage.style.display = 'block';
					
					setTimeout(() => {
						formMessage.style.display = 'none';
					}, 7000);
				} finally {
					submitButton.textContent = originalText;
					submitButton.disabled = false;
				}
			});
		}
	});
</script>