---
import Layout from '../../../layouts/Layout.astro';

// Define city-specific data
const cityName = "Plano";
const countyName = "Dallas County";
const population = "285,000";
const neighborhoods = "Legacy West, Shops at Legacy, Downtown Plano, Willow Bend, Preston Meadow, Spring Creek, Oak Point";
const landmarks = "AT&T Stadium, American Airlines Center, Dallas Museum of Art, Reunion Tower";
const businessDistricts = "Legacy West, Legacy Business Park, Granite Park, Downtown Plano, Shops at Legacy";
const majorEmployers = "Toyota North America, JPMorgan Chase, Liberty Mutual, Capital One, Frito-Lay, JCPenney";
const shoppingCenters = "Legacy West, Shops at Legacy, Willow Bend Mall, Preston Towne Center";
const techCompanies = "Toyota Connected, Ericsson, NTT Data, Infosys, Cognizant";
---

<Layout 
  title={`Phone Repair ${cityName}, TX | Mobile Service | GadgetFix LLC`}
  description={`Professional phone repair in ${cityName}, Texas. iPhone, Samsung, tablet repairs. We come to you! Same-day service, 90-day warranty. Call (402) 416-6942`}
  keywords={`phone repair ${cityName.toLowerCase()}, iphone repair ${cityName.toLowerCase()} tx, samsung repair ${cityName.toLowerCase()}, mobile repair ${cityName.toLowerCase()}, windows troubleshooting ${cityName.toLowerCase()}, mac troubleshooting ${cityName.toLowerCase()}, computer repair ${cityName.toLowerCase()}, virus removal ${cityName.toLowerCase()}, password reset ${cityName.toLowerCase()}`}
>
  <main>
    <!-- Hero Section -->
    <section class="city-hero">
      <div class="container">
        <h1>Phone Repair in {cityName}, Texas</h1>
        <p class="hero-subtitle">Professional Mobile Device Repair Service - We Come to You</p>
        <div class="hero-buttons">
          <a href="tel:4024166942" class="btn-primary">CALL NOW: (402) 416-6942</a>
          <a href="/contact" class="btn-secondary">SCHEDULE SERVICE</a>
        </div>
        <p class="service-note">Serving {cityName} and surrounding areas • 7 days a week</p>
      </div>
    </section>

    <!-- Local Service Info -->
    <section class="local-info">
      <div class="container">
        <h2>Mobile Repair Service in {cityName}</h2>
        <p>GadgetFix LLC provides professional mobile device repair throughout {cityName}, {countyName}. 
        With a population of {population}, {cityName} residents rely on their devices daily. When your 
        phone breaks, we bring the repair shop to you - whether you're at home, work, or your favorite 
        coffee shop.</p>
        <p>We serve all {cityName} neighborhoods including {neighborhoods}.</p>
        
        <div class="local-features">
          <h3>Plano Tech Hub Service</h3>
          <p>Plano is home to major tech companies and corporate headquarters. We provide priority service to: {businessDistricts}. 
          With {majorEmployers} headquartered here, we understand that device downtime means lost productivity.</p>
          
          <h3>Common Plano Device Emergencies</h3>
          <ul>
            <li><strong>Legacy West Office Towers:</strong> Laptop crashes during client presentations - 20-minute response to your office</li>
            <li><strong>Toyota Headquarters:</strong> Executive device emergencies - discreet professional service</li>
            <li><strong>Shops at Legacy:</strong> Shopping and dining mishaps - repair while you enjoy lunch</li>
            <li><strong>Willow Bend Mall:</strong> Retail therapy gone wrong - parking lot screen replacement</li>
            <li><strong>Granite Park Offices:</strong> Work-from-home tech failures - we come to your apartment</li>
            <li><strong>Downtown Plano Arts District:</strong> Festival phone drops - quick turnaround service</li>
          </ul>
          
          <h3>Plano Corporate Services</h3>
          <p>Trusted by employees at {techCompanies}. We offer corporate accounts with priority response times, 
          volume discounts, and dedicated support for your IT department. Average response time to Legacy West: 15-25 minutes.</p>
          
          <h3>Plano Schools & Students</h3>
          <p>Supporting Plano ISD students and staff, plus nearby UTD and Collin College students. Emergency service for 
          school-issued devices and personal electronics. Special rates for educators and students with valid ID.</p>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="services-section">
      <div class="container">
        <h2>Our {cityName} Repair Services</h2>
                        <div class="services-grid">
          <a href="/screen-replacement" class="service-card-link">
            <div class="service-card">
              <div class="service-icon">
