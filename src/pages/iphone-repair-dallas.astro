import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Same-Day iPhone Repair Dallas | We Come to Your Location | GadgetFix"
  description="Fix your iPhone today with mobile repair service in Dallas. Screen, battery & water damage repairs. 90-day warranty. Call (402) 416-6942 for same-day service!"
  keywords="iphone repair dallas, iphone screen repair dallas tx, iphone battery replacement dallas, fix iphone dallas, apple repair dallas, iphone 15 repair dallas, iphone 14 screen replacement"
>
  <!-- Hero Section -->
  <section class="iphone-hero">
    <div class="container">
      <h1 class="hero-title">iPhone Repair Dallas - Expert Mobile Service</h1>
      <p class="hero-subtitle">Professional iPhone repair services for all models. We come to your location in Dallas with 30-minute repairs and 90-day warranty coverage.</p>
      
      <div class="hero-grid">
        <div class="hero-content">
