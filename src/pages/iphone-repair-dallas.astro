    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .stats {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .stat {
    text-align: center;
  }

  .stat .number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    font-family: var(--font-heading);
    color: #22c55e;
