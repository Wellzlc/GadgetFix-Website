    letter-spacing: 0.5px;
  }

  .step p {
    color: #6b7280;
    line-height: 1.6;
  }

  /* Final CTA */
  .final-cta {
    padding: 80px 0;
    background: #1e3a8a;
    text-align: center;
  }

  .final-cta .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

