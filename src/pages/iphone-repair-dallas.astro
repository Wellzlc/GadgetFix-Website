<style>
  /* Using your exact brand colors and typography */
  :root {
    --brand-dark-blue: #1e3a8a;
    --brand-primary: #2563EB;
    --brand-light-blue: rgba(37, 99, 235, 0.1);
    --success-green: #22c55e;
  }

  .iphone-hero {
    background: var(--brand-dark-blue);
    color: white;
    padding: 4rem 0 6rem;
  }

  .brand-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 4rem;
    font-weight: 400;
    margin-bottom: 2rem;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.1;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  .benefits-list li {
    padding: 0.75rem 0;
    font-size: 1.1rem;
    border-bottom: 1px solid rgba(255,255,255,0.2);
  }

  .primary-btn {
    display: inline-block;
    background: #000000;
    color: white;
    padding: 1rem 2rem;
    font-size: 1.3rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s;
    border: 2px solid #000000;
  }

  .primary-btn:hover {
    background: #333333;
    border-color: #333333;
    transform: translateY(-2px);
  }

  .availability {
    margin-top: 1rem;
    font-size: 1.1rem;
    color: var(--success-green);
    font-weight: bold;
  }

  .trust-box {
    background: rgba(255,255,255,0.1);
    padding: 2rem;
    border-radius: 15px;
    border: 2px solid rgba(255,255,255,0.3);
  }

  .trust-box h3 {
    font-family: var(--font-heading);
    margin-bottom: 1.5rem;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    text-align: center;
  }

  .stat .number {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .stat .label {
    display: block;
    font-size: 0.9rem;
    opacity: 0.9;
  }


  h2 {
    font-family: var(--font-heading);
    text-align: center;
    color: var(--color-dark);
    font-size: 3rem;
    font-weight: 400;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    line-height: 1.2;
  }

  .section-subtitle {
    text-align: center;
    color: #6b7280;
    margin-bottom: 3rem;
    font-size: 1.25rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }


  .common-problems {
    padding: 6rem 0;
    background: white;
  }

  .problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .problem-card {
    text-align: center;
    padding: 2rem;
    background: var(--brand-light-blue);
    border-radius: 20px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .problem-card:hover {
    transform: translateY(-5px);
    border-color: var(--brand-primary);
    box-shadow: 0 8px 30px rgba(37, 99, 235, 0.15);
  }

  .problem-card .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  .problem-card h3 {
    font-family: var(--font-heading);
    color: var(--color-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
  }

  .problem-card p {
    color: #6b7280;
    line-height: 1.6;
  }

  .service-areas {
    padding: 6rem 0;
    background: #f9fafb;
  }

  .areas-layout {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .area-column {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    border: 2px solid var(--brand-primary);
    box-shadow: 0 4px 20px rgba(37, 99, 235, 0.1);
  }

  .area-column h3 {
    font-family: var(--font-heading);
    color: var(--brand-primary);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #e5e7eb;
    color: #333;
  }

  .repair-process {
    padding: 6rem 0;
    background: white;
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .step {
    text-align: center;
  }

  .step-number {
    display: inline-block;
    width: 60px;
    height: 60px;
    line-height: 60px;
    background: var(--brand-primary);
    color: white;
    border-radius: 50%;
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }

  .step h3 {
    font-family: var(--font-heading);
    color: var(--color-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
  }

  .step p {
    color: #6b7280;
    line-height: 1.6;
  }

  .bottom-cta {
    background: var(--brand-dark-blue);
    color: white;
    padding: 6rem 0;
    text-align: center;
  }

  .bottom-cta h2 {
    color: white;
  }

  .cta-button-large {
    display: inline-block;
    background: #000000;
    color: white;
    padding: 1.5rem 3rem;
    font-size: 1.3rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 1.5rem 0;
    border: 2px solid #000000;
    transition: all 0.3s;
  }

  .cta-button-large:hover {
    background: #333333;
    border-color: #333333;
    transform: translateY(-2px);
  }

  .final-trust {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .final-trust span {
    padding: 0.5rem 1rem;
    background: rgba(255,255,255,0.1);
    border-radius: 25px;
    border: 1px solid rgba(255,255,255,0.3);
    font-weight: 500;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    h1 {
      font-size: 2.5rem;
    }

    h2 {
      font-size: 2.2rem;
    }
    

    .problems-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .areas-layout {
      grid-template-columns: 1fr;
    }

    .process-steps {
      grid-template-columns: repeat(2, 1fr);
    }

    .final-trust {
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .problems-grid {
      grid-template-columns: 1fr;
    }

    .process-steps {
      grid-template-columns: 1fr;
    }
  }
</style>