	}

	.hero-subtitle {
		font-size: 1.25rem;
		margin-bottom: 2.5rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		opacity: 0.9;
		line-height: 1.6;
	}

	.hero-cta {
		margin-bottom: 3rem;
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.hero .btn-primary,
	.hero .btn-secondary {
		background: #000000;
		color: white;
		border: 2px solid #000000;
		border-radius: 100px;
		text-decoration: none;
	}

	.hero .btn-primary:hover,
	.hero .btn-secondary:hover {
		background: #333333;
		border-color: #333333;
	}

	.btn-large {
		padding: 1rem 2rem;
		font-size: 1.1rem;
	}


	/* Section Styles */
	.section-title {
		font-family: var(--font-heading);
		font-size: 3rem;
		font-weight: 400;
		text-align: center;
		margin-bottom: 1rem;
		color: var(--color-dark);
		text-transform: uppercase;
		letter-spacing: 1.5px;
		line-height: 1.2;
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.25rem;
		color: #6b7280;
		margin-bottom: 3rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	/* Services Section */
	.services {
		padding: 6rem 0;
		background: white;
	}

	.services-grid {
		display: grid;
