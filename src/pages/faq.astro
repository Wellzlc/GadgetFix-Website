  padding: 1rem 2rem;
  font-size: 1.3rem;
  font-weight: bold;
  text-decoration: none;
  border-radius: 50px;
  margin: 1rem 0;
  transition: all 0.3s ease;
}

.cta-button:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 20px rgba(0, 102, 204, 0.3);
}

.service-note {
  color: #666;
  margin-top: 1rem;
  font-weight: 600;
}

.additional-info {
  margin-top: 1rem;
  color: #666;
}

.additional-info a {
  color: #0066cc;
  font-weight: 600;
}

.additional-info a:hover {
  color: #004499;
}

/* Responsive Design */
@media (max-width: 768px) {
  h1 {
    font-size: 1.8rem;
  }
  
  .faq-item {
    padding: 1rem;
  }
  
  .faq-item h3 {
    font-size: 1.1rem;
  }
  
  .cta-button {
    font-size: 1.1rem;
    padding: 0.8rem 1.5rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 0.5rem;
  }
  
  h1 {
    font-size: 1.5rem;
  }
  
  .faq-intro {
    font-size: 1rem;
  }
  
  .faq-section h2 {
    font-size: 1.2rem;
  }
}
</style>

