  color: #004499;
  margin-bottom: 1rem;
  font-family: var(--font-heading);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.cta-button {
  display: inline-block;
  background: linear-gradient(135deg, #0066cc 0%, #4d94ff 100%);
