---
export interface Props {
  number: number;
  title: string;
  description: string;
  className?: string;
}

const { number, title, description, className = '' } = Astro.props;
---

<div class={`why-item animate-on-scroll ${className}`}>
  <div class="why-number">{number}</div>
  <h3>{title}</h3>
  <p set:html={description}></p>
</div>