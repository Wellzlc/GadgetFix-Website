---
import Layout from '../../../layouts/Layout.astro';

// Define county-specific data
const countyName = "Rockwall County";
const cities = ["Rockwall", "Heath", "Fate", "Royse City", "McLendon-Chisholm"];
---

<Layout 
  title={`Phone Repair ${countyName} TX | All Cities | GadgetFix`}
  description={`Mobile phone repair service throughout ${countyName}. We serve all cities with same-day service. Call (402) 416-6942`}
>
  <main>
    <!-- Hero Section - SAME AS HOMEPAGE -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">{countyName} Phone Repair</h1>
          <p class="hero-subtitle">Select Your City for Mobile Device Repair Service</p>
          
          <div class="hero-cta">
            <a href="tel:4024166942" class="btn btn-primary btn-large">CALL NOW FOR SERVICE</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Cities Grid - CLEAN LIKE HOMEPAGE SERVICES -->
    <section class="cities-section">
      <div class="container">
        <h2 class="section-title">Select Your City in {countyName}</h2>
        
        <div class="cities-grid">
          {cities.map(city => (
            <a href={`/locations/rockwall-county/${city.toLowerCase().replace(' ', '-')}`} class="city-card">
              <h3>{city}</h3>
              <p>Mobile repair service</p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Service Info - CLEAN PROFESSIONAL -->
    <section class="info-section">
      <div class="container">
        <h2 class="section-title">Mobile Service Throughout {countyName}</h2>
        <p>GadgetFix provides professional device repair across all of {countyName}. Our mobile technicians come directly to your location for convenient, fast service. All repairs backed by our 90-day warranty.</p>
        
        <div class="service-features">
          <div class="feature">
            <h3>Same Day Service</h3>
            <p>Fast response throughout {countyName}</p>
          </div>
          <div class="feature">
            <h3>We Come to You</h3>
            <p>Mobile service at your location</p>
          </div>
          <div class="feature">
            <h3>90-Day Warranty</h3>
            <p>All repairs guaranteed</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section - SAME AS HOMEPAGE -->
    <section class="final-cta">
      <div class="container">
        <div class="cta-content">
          <h2>READY FOR DEVICE REPAIR?</h2>
          <p>Professional mobile service throughout {countyName}</p>
          <div class="cta-buttons">
            <a href="tel:4024166942" class="btn btn-primary btn-large">CALL NOW FOR SERVICE</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
/* USE ONLY HOMEPAGE STYLES - NO NEW CSS */
/* Hero Section */
.hero {
  background: #1e3a8a;
  color: white;
  padding: 4rem 0 6rem;
  text-align: center;
}

.hero-title {
  font-family: var(--font-heading);
  font-size: 4rem;
  font-weight: 400;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.hero-subtitle {
  font-size: 1.25rem;
  margin-bottom: 2.5rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  opacity: 0.9;
  line-height: 1.6;
}

.hero-cta {
  margin-bottom: 3rem;
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.hero .btn-primary,
.hero .btn-secondary {
  background: #000000;
  color: white;
  border: 2px solid #000000;
  border-radius: 100px;
  text-decoration: none;
}

.hero .btn-primary:hover,
.hero .btn-secondary:hover {
  background: #333333;
  border-color: #333333;
}

.btn-large {
  padding: 1rem 2rem;
  font-size: 1.1rem;
}

/* Section Styles */
.section-title {
  font-family: var(--font-heading);
  font-size: 3rem;
  font-weight: 400;
  text-align: center;
  margin-bottom: 1rem;
  color: var(--color-dark);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  line-height: 1.2;
}

.cities-section {
  padding: 6rem 0;
  background: white;
}

.cities-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}

.city-card {
  background: #f8f9fa;
  padding: 1.5rem;
  border-radius: 8px;
  text-decoration: none;
  color: inherit;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s;
  border: 1px solid #e0e0e0;
}

.city-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
  background: #fff;
}

.city-card h3 {
  color: #0066cc;
  margin-bottom: 0.5rem;
}

.city-card p {
  color: #666;
  font-size: 0.9rem;
}

.info-section {
  padding: 6rem 0;
  background: #f9fafb;
  text-align: center;
}

.info-section p {
  text-align: center;
  font-size: 1.25rem;
  color: #6b7280;
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.service-features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.feature {
  text-align: center;
}

.feature h3 {
  color: #0066cc;
  margin-bottom: 0.5rem;
  font-family: var(--font-heading);
  font-size: 24px;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.feature p {
  color: #6b7280;
  line-height: 1.6;
  font-size: 16px;
}

/* Final Call to Action */
.final-cta {
  padding: 80px 0;
  background: #1e3a8a;
  text-align: center;
}

.final-cta .cta-content {
  max-width: 800px;
  margin: 0 auto;
}

.final-cta h2 {
  font-family: var(--font-heading);
  font-size: 48px;
  font-weight: 400;
  color: white;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  line-height: 1.2;
}

.final-cta p {
  font-size: 20px;
  color: white;
  margin-bottom: 3rem;
  line-height: 1.5;
  opacity: 0.9;
}

.final-cta .cta-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.final-cta .btn {
  border-radius: 100px;
  padding: 1rem 2rem;
  font-size: 1.1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  min-width: 220px;
}

.final-cta .btn:hover {
  transform: translateY(-2px);
}

.final-cta .btn-primary {
  background: #000000;
  color: white;
  border: 2px solid #000000;
}

.final-cta .btn-primary:hover {
  background: #333333;
  border-color: #333333;
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.8rem;
  }

  .hero-subtitle {
    font-size: 1.1rem;
  }

  .section-title {
    font-size: 2.2rem;
  }

  .hero-cta {
    flex-direction: column;
    align-items: center;
  }

  .cities-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .city-card {
    padding: 1rem;
  }

  .service-features {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .feature h3 {
    font-size: 20px;
  }

  .feature p {
    font-size: 14px;
  }

  .final-cta {
    padding: 60px 0;
  }

  .final-cta h2 {
    font-size: 36px;
  }

  .final-cta p {
    font-size: 18px;
  }

  .final-cta .cta-buttons {
    flex-direction: column;
    align-items: center;
  }

  .final-cta .btn {
    width: 100%;
    max-width: 280px;
  }
}

@media (max-width: 480px) {
  .hero {
    padding: 3rem 0 4rem;
  }

  .hero-title {
    font-size: 2.2rem;
  }

  .cities-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .city-card {
    padding: 1rem;
  }

  .service-features {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .feature h3 {
    font-size: 18px;
  }

  .feature p {
    font-size: 14px;
  }

  .final-cta {
    padding: 40px 0;
  }

  .final-cta h2 {
    font-size: 28px;
  }

  .final-cta p {
    font-size: 16px;
  }

  .final-cta .btn {
    padding: 14px 24px;
    font-size: 14px;
  }
}
</style>