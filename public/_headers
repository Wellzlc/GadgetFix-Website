# Cache static assets for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
/images/optimized/*
  Cache-Control: public, max-age=31536000, immutable
  
/_assets/*
  Cache-Control: public, max-age=31536000, immutable
  
/_chunks/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Cache CSS and JS for 1 month
*.css
  Cache-Control: public, max-age=2592000, immutable
  
*.js
  Cache-Control: public, max-age=2592000, immutable

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  
# Enable compression
/*
  Content-Encoding: gzip
  Vary: Accept-Encoding

# Preload critical resources
/
  Link: </styles/critical.css>; rel=preload; as=style
  Link: </images/optimized/hero-background.webp>; rel=preload; as=image; type=image/webp
  Link: </fonts/inter-var.woff2>; rel=preload; as=font; type=font/woff2; crossorigin

# Push critical resources for HTTP/2
/
  Link: </styles/critical.css>; rel=preload; as=style; nopush
  Link: </_assets/vendor.js>; rel=modulepreload; nopush