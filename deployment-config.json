{
  "deployment": {
    "project": "GadgetFix-Website",
    "feature": "FAQ Schema Rollout",
    "version": "1.0.0",
    "environment": {
      "staging": "netlify-preview",
      "production": "netlify-production"
    }
  },
  "phases": {
    "phase1": {
      "name": "Pilot Deployment",
      "description": "Deploy FAQ schema to 10 representative location pages",
      "percentage": 12.5,
      "strategy": "mixed_sample",
      "validation_gates": [
        "schema_validation",
        "seo_validation", 
        "performance_check",
        "health_check"
      ],
      "approval_required": false,
      "rollback_trigger": {
        "error_rate": 10,
        "performance_degradation": 20,
        "seo_score_drop": 15
      }
    },
    "phase2": {
      "name": "Expanded Deployment", 
      "description": "Deploy to 50% of total location pages",
      "percentage": 50,
      "strategy": "county_priority",
      "validation_gates": [
        "phase1_success_validation",
        "schema_validation",
        "seo_validation",
        "performance_check", 
        "health_check"
      ],
      "approval_required": true,
      "rollback_trigger": {
        "error_rate": 5,
        "performance_degradation": 15,
        "seo_score_drop": 10
      },
      "prerequisites": {
        "phase1_success_rate": 95,
        "phase1_monitoring_duration": "24h"
      }
    },
    "phase3": {
      "name": "Complete Rollout",
      "description": "Deploy FAQ schema to all remaining location pages", 
      "percentage": 100,
      "strategy": "remaining_pages",
      "validation_gates": [
        "phase2_success_validation",
        "schema_validation",
        "seo_validation", 
        "performance_check",
        "health_check"
      ],
      "approval_required": true,
      "rollback_trigger": {
        "error_rate": 3,
        "performance_degradation": 10,
        "seo_score_drop": 8
      },
      "prerequisites": {
        "phase2_success_rate": 90,
        "phase2_monitoring_duration": "48h"
      }
    }
  },
  "validation": {
    "schema_validation": {
      "enabled": true,
      "timeout": 300,
      "required_checks": [
        "faq_schema_present",
        "valid_json_ld",
        "location_localization",
        "minimum_question_count"
      ],
      "minimum_score": 90
    },
    "seo_validation": {
      "enabled": true,
      "timeout": 600,
      "required_checks": [
        "title_optimization",
        "meta_description",
        "canonical_url",
        "internal_linking",
        "keyword_density"
      ],
      "minimum_score": 80
    },
    "performance_check": {
      "enabled": true,
      "timeout": 300,
      "thresholds": {
        "page_load_time": 3000,
        "largest_contentful_paint": 2500,
        "cumulative_layout_shift": 0.1
      }
    },
    "health_check": {
      "enabled": true,
      "timeout": 180,
      "retries": 3,
      "required_checks": [
        "page_accessibility",
        "schema_rendering",
        "no_console_errors"
      ]
    }
  },
  "monitoring": {
    "enabled": true,
    "duration_hours": 72,
    "check_interval_minutes": 30,
    "alerts": {
      "error_rate_threshold": 5,
      "performance_degradation_threshold": 15,
      "seo_score_drop_threshold": 10
    },
    "metrics": [
      "page_load_time",
      "error_rate", 
      "search_console_impressions",
      "rich_snippet_appearances",
      "user_engagement"
    ]
  },
  "rollback": {
    "automatic": {
      "enabled": true,
      "triggers": [
        "critical_error_rate",
        "severe_performance_degradation",
        "validation_failure"
      ]
    },
    "manual": {
      "enabled": true,
      "approval_required": true,
      "safety_backup": true
    }
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "email": {
        "enabled": false,
        "recipients": []
      },
      "webhook": {
        "enabled": false,
        "url": ""
      },
      "console": {
        "enabled": true,
        "verbose": true
      }
    },
    "events": [
      "deployment_start",
      "deployment_complete", 
      "validation_failure",
      "rollback_triggered",
      "phase_complete"
    ]
  },
  "feature_flags": {
    "enabled": true,
    "provider": "config_file",
    "flags": {
      "faq_schema_rendering": {
        "enabled": true,
        "rollout_percentage": 100,
        "targeting": "location_pages"
      },
      "advanced_faq_features": {
        "enabled": false,
        "rollout_percentage": 0,
        "targeting": "none"
      },
      "faq_analytics_tracking": {
        "enabled": true,
        "rollout_percentage": 100,
        "targeting": "all_pages"
      }
    }
  },
  "backup": {
    "enabled": true,
    "retention_days": 30,
    "compression": true,
    "include_git_state": true,
    "include_metadata": true,
    "cleanup_old_backups": true
  },
  "reporting": {
    "enabled": true,
    "formats": ["json", "html", "markdown"],
    "include_performance_metrics": true,
    "include_seo_analysis": true,
    "include_recommendations": true,
    "auto_generate": true
  },
  "security": {
    "validation": {
      "input_sanitization": true,
      "xss_protection": true,
      "content_security_policy": true
    },
    "deployment": {
      "verify_checksums": true,
      "signed_deployments": false,
      "audit_trail": true
    }
  }
}